{
  "name": "todo-list-node-api",
  "version": "0.0.1",
  "description": "todo list api",
  "main": "dist/server.js",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "dev": "npx nodemon --watch 'src/' --exec 'ts-node-dev -r tsconfig-paths/register --exit-child --respawn --ignore-watch node_modules --no-notify src/server.ts' -e ts",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint src/**/*.ts --fix",
    "test": "NODE_ENV=test npx jest --verbose --bail --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test npx jest --verbose --bail --detectOpenHandles --forceExit --watchAll",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "studio": "npx prisma studio",
    "studio:test": "NODE_ENV=test npx prisma studio",
    "db-reset": "npx prisma migrate reset --force",
    "db-reset:test": "NODE_ENV=test npx prisma migrate reset --force",
    "db-migrate": "npx prisma migrate dev",
    "db-migrate:test": "NODE_ENV=test npx prisma migrate dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marciofmjr/todo-list-node-api.git"
  },
  "keywords": [
    "todo"
  ],
  "author": "Marcio Junior",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marciofmjr/todo-list-node-api/issues"
  },
  "homepage": "https://github.com/marciofmjr/todo-list-node-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.10.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "prisma": "^3.10.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0"
  }
}
