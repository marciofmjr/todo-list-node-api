{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es6"],
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["./src/shared/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
        "typings/**/*"
    ]
}